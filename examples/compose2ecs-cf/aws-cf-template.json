{
  "Parameters": {
    "Cluster": {
      "Type": "String"
    },
    "DesiredCount": {
      "Default": 1,
      "Type": "Number"
    }
  },
  "Resources": {
    "Service": {
      "Properties": {
        "Cluster": {
          "Ref": "Cluster"
        },
        "DesiredCount": {
          "Ref": "DesiredCount"
        },
        "TaskDefinition": {
          "Ref": "TaskDefinition"
        }
      },
      "Type": "AWS::ECS::Service"
    },
    "TaskDefinition": {
      "Properties": {
        "ContainerDefinitions": [
          {
            "Environment": [
              {
                "Name": "MYSQL_ROOT_PASSWORD",
                "Value": "ch4ngeIt0"
              }
            ],
            "Image": "mysql",
            "Memory": 512,
            "Name": "mysql"
          },
          {
            "Environment": [
              {
                "Name": "WORDPRESS_DB_PASSWORD",
                "Value": "ch4ngeIt0"
              }
            ],
            "Image": "wordpress",
            "Links": [
              "mysql"
            ],
            "Memory": 256,
            "Name": "wordpress",
            "PortMappings": [
              {
                "ContainerPort": 80,
                "HostPort": 8080
              }
